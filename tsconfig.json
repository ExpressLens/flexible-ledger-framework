    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "declaration": true,
    "baseUrl": "types",
    "typeRoots": ["node_modules/@types"],
